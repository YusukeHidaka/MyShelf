<div>
  <% if user_signed_in? %>
    <%= link_to reviews_path, :class => 'navbar-brand' do %>
      <%= image_tag 'logo.png' %> <small class='hidden-xs hidden-sm'>本棚をラクラク管理して、みんなで共有しよう！</small>
    <% end %>
  <% else %>
    <%= link_to unauthenticated_root_path, :class => 'navbar-brand' do %>
      <%= image_tag 'logo.png' %> <small class='hidden-xs hidden-sm'>本棚をラクラク管理して、みんなで共有しよう！</small>
    <% end %>
  <% end %>
  <div>
    <ul>
      <% if user_signed_in? %>
      <li>
        アカウント
        <ul>
          <li><%= link_to "My Page", user_path(current_user) %></li>
          <li><%= link_to "Edit Profile", edit_user_path(current_user) %></li>
          <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
        </ul>
      </li>
      <li><%= link_to "Original Books", original_books_path %></li>
      <% else %>
        <li>
          <%= link_to 'SignIn or SignUp with Google', user_google_oauth2_omniauth_authorize_path %>
        </li>
      <% end %>
    </ul>
  </div>
  <%= render partial: 'common/search' %>
</div>
